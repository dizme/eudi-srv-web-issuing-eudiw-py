{
	"it.infocert.eudi.identity_vc_sd_jwt": {
		"format": "vc+sd-jwt",
		"scope": "it.infocert.eudi.identity.1",
		"cryptographic_binding_methods_supported": [
			"jwk", "cose_key"
		],
		"credential_signing_alg_values_supported": [
			"ES256"
		],
		"proof_types_supported": {
			"jwt": {
				"proof_signing_alg_values_supported": [
					"ES256"
				]
			},
			"cwt": {
				"proof_signing_alg_values_supported": [
					"ES256"
				],
				"proof_alg_values_supported": [
					-7
				],
				"proof_crv_values_supported": [
					1
				]
			}
		},
		"display": [{
			"name": "Identity",
			"locale": "en",
			"logo": {
				"uri": "https://as1.ftcdn.net/jpg/03/06/00/54/1000_F_306005413_CJxMUp3Ie3iLra1yLD3oJpzfdFBHGCiJ.jpg",
				"alt_text": "A square figure of an Identity"
			}
		}],
		"vct": "urn:it.infocert.eudi:identity:1",
		"claims": {
			"given_name": {
				"mandatory": true,
				"value_type": "string",
				"source": "user",
				"display": [{
					"name": "First Name",
					"locale": "en"
				}]
			},
			"family_name": {
				"mandatory": true,
				"value_type": "string",
				"source": "user",
				"display": [{
					"name": "Last Name",
					"locale": "en"
				}]
			},
			"birth_date": {
				"mandatory": false,
				"value_type": "full-date",
				"source": "user",
				"display": [{
					"name": "Birth Date",
					"locale": "en"
				}]
			},
			"tax_id_code": {
				"mandatory": true,
				"value_type": "string",
				"source": "user",
				"display": [{
					"name": "Tax Id Code (Fiscal Code)",
					"locale": "en"
				}]
			},
			"email": {
				"mandatory": false,
				"value_type": "string",
				"source": "user",
				"display": [{
					"name": "Email address",
					"locale": "en"
				}]
			},
			"phone_number": {
				"mandatory": false,
				"value_type": "string",
				"source": "user",
				"display": [{
					"name": "Phone number",
					"locale": "en"
				}]
			},
			"issuance_date": {
				"mandatory": true,
				"source": "issuer",
				"display": [{
					"name": "Date of issuance of this credential.",
					"locale": "en"
				}]
			},
			"expiry_date": {
				"mandatory": true,
				"source": "issuer",
				"display": [{
					"name": "Date of expiration of this credential.",
					"locale": "en"
				}]
			},
			"issuing_country": {
				"mandatory": true,
				"source": "issuer",
				"display": [{
					"name": "Alpha-2 country code, as defined in ISO 3166-1, of the issuing authorityâ€™s country or territory",
					"locale": "en"
				}]
			},
			"issuing_authority": {
				"mandatory": true,
				"source": "issuer",
				"display": [{
					"name": "Issuing authority name. The value shall only use latin1b characters and shall have a maximum length of 150 characters.",
					"locale": "en"
				}]
			}
		}
	}
}